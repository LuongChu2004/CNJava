<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">

   <servlet>
    <servlet-name>ColorServlet</servlet-name>
    <servlet-class>controller.ColorServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ColorServlet</servlet-name>
    <url-pattern>/color</url-pattern>
</servlet-mapping>

    <filter> 
        <filter-name>ColorFilter</filter-name>
        <filter-class>controller.ColorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ColorFilter</filter-name>
        <url-pattern>/color</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>controller.RequestListener</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>color.jsp</welcome-file>
    </welcome-file-list>

</web-app>
